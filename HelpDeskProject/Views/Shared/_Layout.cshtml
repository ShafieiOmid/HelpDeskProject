                        <li>@Html.ActionLink("Printer", "", "Printers")</li>
                        <li>@Html.ActionLink("Repair", "", "Repairs")</li>
                        <li>@Html.ActionLink("Cartridge", "", "Cartridges")</li>
                    </ul>
